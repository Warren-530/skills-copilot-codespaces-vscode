<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Section 1: Header -->
        <ImageView
            android:id="@+id/ivDetailBanner"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvDetailTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/ivDetailBanner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/chipStatus"
            tools:text="Event Title" />

        <TextView
            android:id="@+id/tvDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvDetailTitle"
            app:layout_constraintStart_toStartOf="@id/tvDetailTitle"
            tools:text="22/11/2025" />

        <TextView
            android:id="@+id/tvDetailLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvDetailDate"
            app:layout_constraintStart_toStartOf="@id/tvDetailTitle"
            tools:text="FCSIT, UM" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Open"
            app:layout_constraintTop_toTopOf="@id/tvDetailTitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvDetailDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvDetailLocation"
            app:layout_constraintStart_toStartOf="@id/tvDetailTitle"
            app:layout_constraintEnd_toEndOf="@id/chipStatus"
            tools:text="This is a detailed description of the event..." />

        <!-- Section 2: Poster Carousel -->
        <TextView
            android:id="@+id/tvPosterHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Event Posters"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintTop_toBottomOf="@id/tvDetailDescription"
            app:layout_constraintStart_toStartOf="@id/tvDetailTitle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPosterCarousel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/tvPosterHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Section 3: Sustainability -->
        <TextView
            android:id="@+id/tvSustainabilityHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android.layout_marginTop="24dp"
            android:text="Sustainability Score"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintTop_toBottomOf="@id/rvPosterCarousel"
            app:layout_constraintStart_toStartOf="@id/tvDetailTitle" />

        <RatingBar
            android:id="@+id/rbDetailScore"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:isIndicator="true"
            app:layout_constraintTop_toBottomOf="@id/tvSustainabilityHeader"
            app:layout_constraintStart_toStartOf="@id/tvDetailTitle" />

        <TextView
            android:id="@+id/tvImpactLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rbDetailScore"
            app:layout_constraintStart_toStartOf="@id/tvDetailTitle"
            tools:text="15/25 Practices Adopted" />

        <!-- Section 4: Checklist Display -->
        <TextView
            android:id="@+id/tvChecklistHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Eco-Commitments"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintTop_toBottomOf="@id/tvImpactLabel"
            app:layout_constraintStart_toStartOf="@id/tvDetailTitle" />

        <LinearLayout
            android:id="@+id/llChecklistContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvChecklistHeader"
            app:layout_constraintStart_toStartOf="@id/tvDetailTitle"
            app:layout_constraintEnd_toEndOf="@id/chipStatus" />

        <!-- Section 5: Action -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Register Now"
            app:layout_constraintTop_toBottomOf="@id/llChecklistContainer"
            app:layout_constraintStart_toStartOf="@id/tvDetailTitle"
            app:layout_constraintEnd_toEndOf="@id/chipStatus" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
